<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:layout_centerHorizontal="true"
        android:layout_margin="24sp">

        <TextView
            android:id="@+id/cons_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Cons.No# 02153"
            android:textSize="21sp"
            android:layout_margin="18sp"/>

        <TextView
            android:id="@+id/origin_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cons_no"
            android:text="Origin"
            android:layout_marginLeft="18sp"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/origin_txt"
            android:layout_marginLeft="18sp"
            android:layout_marginTop="2sp"
            android:text="Bangladesh"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/processing_plant_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/origin"
            android:text="Processing Plant"
            android:layout_marginLeft="18sp"
            android:layout_marginTop="12sp"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/processing_plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/processing_plant_txt"
            android:layout_marginLeft="18sp"
            android:layout_marginTop="2sp"
            android:layout_marginBottom="18sp"
            android:text="Salam Sea Foods"
            android:textSize="18sp" />



    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/get_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_alignParentRight="true"
        android:layout_margin="24sp"
        android:padding="16sp"
        android:text="Get More Info"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"/>


</RelativeLayout>